		  "        ~${1:ClassName}();",
		  "        // Assignment operator",
		  "        ${1:ClassName} &operator=(const ${1:ClassName} &other);",
		  "};",
		"",
		"std::ostream    &operator<<(std::ostream &stream, ${1:ClassName} const &other);",
